header a, header a:link, footer a, footer a:link
	color #fff
	cursor pointer

.social-link a, .social-link a:link, .blog-title
	color darkorange

.social-link a:hover, .blog-title:hover
	color orange

header a:hover, footer a:hover
	color greenyellow

body
	padding-top 55px
	background url('/img/yellow-green-forest.jpg') center

.hide
	display none

#mdm-popo
	width 256px
	display block
	margin 0 0 -16px 0

li
	list-style none

.block
	display block

.content
	margin-bottom 33px
	margin-top 7px

.blog-title
	font-size 17px

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

.navbar .brand
	color #fff

.navbar-inner
	background #072b07
	background rgba(7,43,7,0.8)
	font bold 11px Helvetica,Arial,sans-serif

.hero-unit
	padding 44px 60px

.hero-unit, .sect, .post
	background-color #FAF6ED
	-webkit-border-radius 6px
	-moz-border-radius 6px
	border-radius 6px

.sect, .post
	padding 13px
	margin-bottom 13px

.sect
	width 433px

.home-sect h2 i
	margin 7px 0 0 0

footer
	color #fff

.beta
	margin 14px 0 0 -13px
	float left

.social-link
	opacity .7
	padding 7px

.social-link:hover
	opacity 1

.head-tweet
	font-weight normal

.mdm
	text-align right
.clear 
	clear both

.comments input, .comments textarea
	width 100%

.social-buttons
	position fixed
	top 111px
	left 1px
	width 81px

.close-header
	position fixed
	top 7px
	right 15px
	z-index 1031

::-moz-selection
	background rgba(7,43,7,0.8)
	color orange
	text-shadow none
::selection
	background rgba(7,43,7,0.8)
	color orange
	text-shadow none

::-webkit-scrollbar
	width 17px
	background rgb(7,43,7)
::-webkit-scrollbar-track
	-webkit-box-shadow:inset 0 0 6px rgb(7,43,7)
::-webkit-scrollbar-thumb
	background rgb(102,51,0)
	-webkit-box-shadow:inset 0 0 6px rgb(7,43,7)
::-webkit-scrollbar-thumb:window-inactive
	background rgb(101,55,3)